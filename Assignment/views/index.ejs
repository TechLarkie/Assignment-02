        <% if (title == "Home Page") { %>
        <a class="nav-link active" href="/home"> <i class="fa-solid fa-house-chimney-window"></i>Home</a>
        <% } else { %>
        <a class="nav-link" href="/home"> <i class="fa-solid fa-house-chimney-window"></i>Home</a>
